<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_popup_sync"
            android:id="@+id/blueShuffle"
            app:layout_constraintStart_toEndOf="@+id/redShuffle" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/greenShuffle" app:layout_constraintTop_toTopOf="@+id/redShuffle"
            app:layout_constraintBottom_toBottomOf="@+id/redShuffle"
            android:tint="@color/design_default_color_primary_dark" android:background="@android:color/transparent"
            android:onClick="blueShuffleClicked"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_popup_sync"
            android:id="@+id/greenShuffle"
            app:layout_constraintStart_toEndOf="@+id/blueShuffle" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/blueShuffle"
            app:layout_constraintBottom_toBottomOf="@+id/blueShuffle" android:background="@android:color/transparent"
            android:tint="@android:color/holo_green_dark" android:onClick="greenShuffleClicked"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/previousAnimal"
            android:rotation="270"
            app:layout_constraintTop_toTopOf="@+id/customizeAvatarDialogImage"
            app:layout_constraintBottom_toBottomOf="@+id/customizeAvatarDialogImage"
            android:onClick="previousAnimalClicked" android:background="@android:color/transparent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/customizeAvatarDialogImage"
            android:tint="@color/design_default_color_primary"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/profiledefault"
            android:id="@+id/customizeAvatarDialogImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/customizeAvatarBgBtn" android:clickable="true"
            android:onClick="customizeAvatarClicked"/>
    <Button
            android:text="Randomize Background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/customizeAvatarBgBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp" android:onClick="customizeAvatarBgClicked"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/customize_btn"
            android:textColor="@android:color/background_light" android:onClick="customizeCancelClicked"/>
    <Button
            android:text="Accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/customize_btn" android:textColor="@android:color/background_light"
            android:textSize="18sp" android:onClick="customizeAcceptClicked"/>
    <Button
            android:text="@string/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightBtn" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/darkBtn"
            app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:onClick="lightBtnClicked"/>
    <Button
            android:text="@string/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/darkBtn"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            app:layout_constraintStart_toEndOf="@+id/lightBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/lightBtn"
            app:layout_constraintBottom_toBottomOf="@+id/lightBtn" android:layout_marginEnd="32dp"
            android:onClick="darkBtnClicked"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/nextAnimal"
            android:rotation="90"
            app:layout_constraintTop_toTopOf="@+id/customizeAvatarDialogImage"
            app:layout_constraintBottom_toBottomOf="@+id/customizeAvatarDialogImage"
            android:onClick="nextAnimalClicked" android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/customizeAvatarDialogImage" android:layout_marginStart="32dp"
            android:tint="@color/design_default_color_primary"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_popup_sync"
            android:id="@+id/redShuffle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/blueShuffle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/customizeAvatarBgBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/customizeAvatarDialogImage"
            android:tint="@android:color/holo_red_dark" android:background="@android:color/transparent"
            android:onClick="redShuffleClicked"/>
</android.support.constraint.ConstraintLayout>